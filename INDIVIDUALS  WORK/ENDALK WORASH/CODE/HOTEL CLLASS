// File: RoomType.java

/**
 * Represents the different types of rooms available in a hotel.
 */
public enum RoomType {
    SINGLE("Single Room"),
    DOUBLE("Double Room"),
    SUITE("Suite"),
    FAMILY("Family Room");

    private final String description;

    RoomType(String description) {
        this.description = description;
    }

    public String getDescription() {
        return description;
    }

    public static RoomType fromString(String text) {
        for (RoomType b : RoomType.values()) {
            if (b.name().equalsIgnoreCase(text) || b.getDescription().equalsIgnoreCase(text)) {
                return b;
            }
        }
        return null; // Or throw an IllegalArgumentException
    }
}
